{
    "id": "anilist-discussions",
    "name": "AniList Discussions",
    "version": "0.1.2",
    "manifestURI": "https://raw.githubusercontent.com/Bas1874/anilist-discussion/refs/heads/main/src/manifest.json",
    "language": "typescript",
    "type": "plugin",
    "description": "Read/Post AniList discussions inside Seanime.",
    "author": "Bas1874",
    "icon": "https://raw.githubusercontent.com/Bas1874/anilist-discussion/main/src/Icons/ad-Icon.png",
    "website": "",
    "lang": "multi",
    "payloadURI": "https://raw.githubusercontent.com/Bas1874/anilist-discussion/refs/heads/main/src/my-plugin.ts",
    "plugin": {
        "version": "1",
        "permissions": {
            "scopes": [
                "anilist",
                "database",
                "anilist-token",
                "system"
            ]
        },
        "systemAllowList": {
            "commandScopes": [
                {
                    "command": "open",
                    "args": [{ "validator": "^https?://.*$" }]
                },
                {
                    "command": "xdg-open",
                    "args": [{ "validator": "^https?://.*$" }]
                },
                {
                    "command": "cmd",
                    "args": [
                        { "value": "/C" },
                        { "value": "start" },
                        { "validator": "^https?://.*$" }
                    ]
                }
            ]
        }
    },
    "isDevelopment": false
}
